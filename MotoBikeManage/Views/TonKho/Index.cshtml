<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>Quản lý tồn kho</h2>
        </div>
        <div class="col-md-6 text-right">
            <a href="@Url.Action("Index", "Vehicles")" class="btn btn-primary">
                <i class="fa fa-motorcycle"></i> Quản lý xe
            </a>
            <a href="@Url.Action("ExportExcel")" class="btn btn-success">
                <i class="fa fa-file-excel"></i> Xuất Excel
            </a>
        </div>
    </div>

    <!-- Phần tìm kiếm và lọc -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-filter"></i> Tìm kiếm và lọc
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Index", "TonKho", FormMethod.Get, new { @class = "form-inline" }))
            {
                <div class="form-group mb-2 mr-2">
                    <label class="mr-2">Thương hiệu:</label>
                    @Html.DropDownList("brand", ViewBag.Brands as SelectList, "-- Tất cả --", new { @class = "form-control" })
                </div>
                <div class="form-group mb-2 mr-2">
                    <label class="mr-2">Năm sản xuất:</label>
                    @Html.DropDownList("year", ViewBag.Years as SelectList, "-- Tất cả --", new { @class = "form-control" })
                </div>
                <div class="form-group mb-2">
                    <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm..." value="@ViewBag.CurrentFilter" />
                </div>
                <button type="submit" class="btn btn-primary mb-2 ml-2">Tìm kiếm</button>
            }
        </div>
    </div>

    <!-- Tổng quan tồn kho -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <h4>@Model.Sum(i => i.stock_remaining)</h4>
                    <div>Đang trong kho</div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <h4>@Model.Sum(i => i.total_exported)</h4>
                    <div>Đã xuất kho</div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <h4>@Model.Sum(i => i.total_maintenance)</h4>
                    <div>Đang bảo trì</div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <h4>@Model.Sum(i => i.total_vehicles)</h4>
                    <div>Tổng số xe</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bảng dữ liệu -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i> Danh sách tồn kho
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover text-center" id="inventoryTable">
                    <thead class="thead-light">
                        <tr>
                            <th>Tên xe</th>
                            <th>Thương hiệu</th>
                            <th>Kiểu xe</th>
                            <th>Màu xe</th>
                            <th>Năm SX</th>
                            <th>Trong kho</th>
                            <th>Đã xuất kho</th>
                            <th>Đang bảo trì</th>
                            <th>Tổng</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var inv in Model)
                        {
                            <tr>
                                <td>@inv.name</td>
                                <td>@inv.brand</td>
                                <td>@inv.model</td>
                                <td>@inv.color</td>
                                <td>@inv.manufacture_year</td>
                                <td>
                                    <span @*class="badge badge-primary"*@>@inv.stock_remaining</span>
                                </td>
                                <td>
                                    <span @*class="badge badge-success"*@>@inv.total_exported</span>
                                </td>
                                <td>
                                    <span @*class="badge badge-warning"*@>@inv.total_maintenance</span>
                                </td>
                                <td>
                                    <span @*class="badge badge-info"*@>@inv.total_vehicles</span>
                                </td>
                                <td>
                                    <a href="@Url.Action("Details", "VehicleModels", new { id = inv.model_id })"
                                       class="btn btn-sm btn-primary" title="Xem chi tiết model">
                                        <i class="fa fa-info-circle"></i>
                                    </a>
                                    <a href="@Url.Action("ModelVehicles", "Vehicles", new { modelId = inv.model_id })"
                                       class="btn btn-sm btn-info" title="Xem danh sách xe">
                                        <i class="fa fa-list"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


    <script>
        $(document).ready(function () {
            $('#inventoryTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Vietnamese.json"
                }
            });
        });
    </script>