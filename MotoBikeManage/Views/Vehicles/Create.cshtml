@model MotoBikeManage.Models.VehicleModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    /* Tăng khoảng cách giữa các nhóm form-control */
    .form-group {
        margin-bottom: 15px;
    }

        /* Tùy chỉnh style label */
        .form-group label {
            font-weight: 600;
            color: #555;
        }

    /* Nút submit */
    .btn-submit {
        background-color: #007bff;
        color: #fff;
        border: none;
        margin-right: 10px;
    }

        .btn-submit:hover {
            background-color: #0056b3;
            color: #fff;
        }

    /* Card chứa toàn bộ form */
    .create-form-card {
        background: #fff;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="create-form-card">
                <h2 class="mb-4">Thêm xe mới</h2>

                @using (Html.BeginForm("Create", "Vehicles", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label>Hình ảnh</label>
                        <input type="file" name="uploadImage" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Tên xe <span class="text-danger">*</span></label>
                        @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Nhãn hiệu</label>
                        @Html.TextBoxFor(m => m.brand, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Loại xe</label>
                        @Html.TextBoxFor(m => m.model, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Màu sắc</label>
                        @Html.TextBoxFor(m => m.color, new { @class = "form-control" })
                    </div>

                  

                    <div class="form-group">
                        <label>Năm sản xuất</label>
                        @Html.TextBoxFor(m => m.manufacture_year, new { @class = "form-control", type = "number" })
                    </div>


                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <a href="@Url.Action("Index", "Vehicles")" class="btn btn-secondary">Hủy</a>
                }
            </div>
        </div>
    </div>
</div>

<!-- Thêm các thư viện JS của Bootstrap hoặc jQuery (nếu chưa có trong Layout) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>
<script>
    // Ví dụ: sau khi trang tải, focus vào ô nhập "Tên xe"
    $(document).ready(function () {
        $('input[name="name"]').focus();
    });
</script>