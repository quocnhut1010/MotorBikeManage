@model MotoBikeManage.ViewModels.ImportStockViewModel

@{
    ViewBag.Title = "Print";
    Layout = null;
}

<body>
    <h2>PHIẾU NHẬP KHO</h2>

    <div>
        <strong>Mã phiếu:</strong> @Model.ImportId<br />
        <strong>Nhà cung cấp:</strong> @Model.SupplierName<br />
        <strong>Người tạo:</strong> @Model.UserName<br />
        <strong>Trạng thái:</strong> @Model.ApprovalStatus<br />
        <strong>Ngày tạo:</strong> @Model.ImportDate?.ToString("dd/MM/yyyy HH:mm")<br />
        <strong>Ngày duyệt:</strong> @Model.ApprovedDate?.ToString("dd/MM/yyyy HH:mm")<br />
        <strong>Người duyệt:</strong> @Model.ApprovedByUser<br />
        <strong>Ghi chú:</strong> @Model.Note
    </div>

    <div class="section">
        <table>
            <thead>
                <tr>
                    <th>Tên xe</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model.Details)
                {
                    <tr>
                        <td style="text-align: left">@detail.ModelName</td>
                        <td>@detail.Quantity</td>
                        <td>@detail.Price.ToString("N0") VNĐ</td>
                        <td>@detail.LineValue.ToString("N0") VNĐ</td>
                    </tr>
                }
                <tr>
                    <td colspan="3" style="text-align: right"><strong>Tổng cộng:</strong></td>
                    <td><strong>@Model.TotalValue.ToString("N0") VNĐ</strong></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="footer">
        ..., ngày ..., tháng ..., năm ...
    </div>

    <table class="signature-table" style="margin-top: 40px;">
        <tr>
            <td>Người lập phiếu<br /><span style="font-style: italic">(Ghi rõ họ tên)</span></td>
            <td>Người duyệt<br /><span style="font-style: italic">(Ghi rõ họ tên)</span></td>
            <td>Kế toán<br /><span style="font-style: italic">(Ghi rõ họ tên)</span></td>
        </tr>
    </table>
</body>


